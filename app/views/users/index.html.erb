<h1>Users</h1>
<div class="container" id="users_form">
  <table>
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td style="padding: 0 0  20px 0; color: #000000; font-family: Arial, sans-serif; font-size: 16px; line-height: 1;"><%= user.first_name %></td>
          <td style="padding: 0 0  20px 0; color: #000000; font-family: Arial, sans-serif; font-size: 16px; line-height: 1;"><%= user.last_name %></td>
          <td style="padding: 0 0  20px 0; color: #000000; font-family: Arial, sans-serif; font-size: 16px; line-height: 1;"><%= user.email %></td>
          <td bgcolor="#ffffd7"><%= link_to ('<span class="glyphicon glyphicon-user"></span>').html_safe, user, class:"btn btn-default btn-sm", role:"button" %></td>
          <td bgcolor="#e5f4f4"><%= link_to ('<span class="glyphicon glyphicon-edit"></span>').html_safe, edit_user_path(user), class:"btn btn-default btn-sm", role:"button" %></td>
          <td bgcolor="#f4e5e5"><%= link_to ('<span class="glyphicon glyphicon-remove"></span>').html_safe, user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default btn-sm", role:"button" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

